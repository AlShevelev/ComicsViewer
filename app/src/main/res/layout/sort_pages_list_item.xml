<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_dark"
    android:paddingBottom="10dp" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/rowImageView"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />
        <ImageView
            android:id="@+id/rowZoomIcon"
            android:layout_gravity="bottom|right"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_zoom_in_yellow_48dp"
            android:tag="zoomIcon"
            />
        <ImageView
            android:id="@+id/rowVisibilityIcon"
            android:layout_gravity="bottom|left"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_visibility_yellow_48dp"
            android:tag="visibilityIcon"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/rowTextView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>